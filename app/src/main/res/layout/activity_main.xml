<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/photo_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin"
        android:contentDescription="@string/view_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/photo_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/photo_button"
        android:layout_width="177dp"
        android:layout_height="44dp"
        android:layout_margin="@dimen/margin"
        android:layout_marginBottom="16dp"
        android:text="@string/button_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/photo_button2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/photo_button2"
        android:layout_width="177dp"
        android:layout_height="44dp"
        android:layout_margin="@dimen/margin"
        android:layout_marginBottom="4dp"
        android:text="@string/button_photo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
